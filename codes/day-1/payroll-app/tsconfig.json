{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES5",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "reflect-metadata"
    ],
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}